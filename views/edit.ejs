<%- include('./partials/header') %> <%- include('./partials/navbar') %>

<div class="container mt-5 border p-4 rounded box shadow">
  <form
    action="/edit/<%=blog.id %>"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="mb-3">
      <label for="file" class="form-label">Choose Thumbnail</label>
      <input
        type="file"
        class="form-control"
        id="file"
        name="coverImage"
        required="false"
        value="<%=blog.coverImage%>"
      />
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        value="<%= blog.title%>"
        id="title"
        name="title"
      />
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea class="form-control" id="content" rows="5" name="content">
<%=blog.content%>
    </textarea
      >
    </div>
    <div>
      <button type="submit" class="btn btn-primary text-white">Submit</button>
    </div>
  </form>
</div>

<%- include('./partials/footer') %>
