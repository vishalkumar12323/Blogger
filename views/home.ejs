<%- include('./partials/header') %> <%- include('./partials/navbar') %>
<div class="container mt-5">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% if (locals.user) { %> <% blogs.forEach(blog => { %>
    <div class="col">
      <div class="card shadow-sm">
        <img src="<%= blog.coverImage %>" alt="blog images" class="img-fluid" />
        <div class="card-body">
          <p class="card-title fs-5 fw-bold">
            <%= blog.title.slice(0, 45) %>...
          </p>
          <p class="card-text"><%= blog.content.slice(0, 60) %></p>
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-primary">
              <a href="/blog/view/<%= blog._id %>" class="nav-link"
                >Continue reading...</a
              >
            </button>
          </div>
        </div>
      </div>
    </div>
    <% }) %> <% } else{%>
    <div class="container" style="width: 100%; margin: 1rem auto">
      <div class="p-5 text-center shadow rounded-3">
        <img
          src="/assets/blogger.png"
          alt="blogger logo"
          class="img-fluid"
          width="50"
        />
        <h1 class="text-body-emphasis">
          No Blogs Posted Yet, Please Login or Create Your Blogs
        </h1>
        <div class="d-inline-flex gap-2 my-4 flex_column">
          <button
            class="d-inline-flex align-items-center btn btn-primary btn-lg px-4 rounded-pill"
            type="button"
          >
            <a href="/user/signin" class="nav-link">Create Account</a>
          </button>
          <button
            class="btn btn-outline-secondary btn-lg px-4 rounded-pill"
            type="button"
          >
            <a href="/user/login" class="nav-link">Login Instead</a>
          </button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

